{
  "include": [
    "./**/*.mjs",
    "./**/*.js",
    "initSrc/Adapters/RpcListener.ts",
    "initSrc/index.ts",
    "effects.ts"
  ],
  "exclude": ["dist"],
  "inputs": ["./lib/index.ts"],
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2022", "dom"],
    "moduleResolution": "node16",
    "allowJs": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    // "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
