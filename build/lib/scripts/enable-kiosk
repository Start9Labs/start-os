#!/bin/sh

sudo apt update
sudo apt install --no-install-recommends -y xserver-xorg xserver-xorg-legacy x11-xserver-utils xinit firefox-esr matchbox-window-manager libnss3-tools
cat << 'EOF' > /home/start9/kiosk.sh
#!/bin/sh
/usr/lib/embassy/scripts/firefox-trust-cert
matchbox-window-manager -use_titlebar no &
firefox --kiosk http://$(hostname).local
EOF
chmod +x /home/start9/kiosk.sh
sudo sed -i 's/=console/=anybody/g' /etc/X11/Xwrapper.config