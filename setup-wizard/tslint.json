{
  "rules": {
    "no-unused-variable": true,
    "no-unused-expression": true,
    "space-before-function-paren": true,
    "semicolon": [
      true,
      "never"
    ],
    "no-trailing-whitespace": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "never"
        },
        "singleline": "never"
      }
    ],
    "quotemark": [
      true,
      "single"
    ]
  }
}
