{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "pretty": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "commonjs",
    "outDir": "../dist",
    "target": "es2021",
    "resolveJsonModule": true
  },
  "include": ["lib/**/*", "../base/lib/util/Hostname.ts"],
  "exclude": ["lib/**/*.spec.ts", "lib/**/*.gen.ts", "list", "node_modules"]
}
