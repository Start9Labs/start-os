[Unit]
Description=Embassy Daemon
After=embassy-init.service
Requires=embassy-init.service

[Service]
Type=simple
Environment=RUST_LOG=embassyd=debug,embassy=debug,js_engine=debug,patch_db=info
ExecStart=/usr/local/bin/embassyd
Restart=always
RestartSec=3
ManagedOOMPreference=avoid
CPUAccounting=true
CPUWeight=1000

[Install]
WantedBy=multi-user.target
